{
    "python.defaultInterpreterPath": "${env:VSC_DEFAULT_PYTHON}",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": true
    },
    "accessibility.signals.terminalBell": {
        "sound": "on"
    },
    "autoDocstring.startOnNewLine": true,
    "dataWrangler.debug": true,
    // Docker integration
    "dev.containers.dockerPath": "podman",
    "docker.contexts.label": "Description",
    "docker.contexts.showInStatusBar": true,
    "docker.dockerPath": "/usr/bin/podman",
    "docker.environment": {
        "DOCKER_HOST": "unix:///run/user/1000/podman/podman.sock"
    },
    // Editor settings
    "editor.defaultColorDecorators": true,
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.inlayHints.fontSize": 9,
    "editor.inlineSuggest.enabled": true,
    "editor.largeFileOptimizations": false,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 90,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 10,
    // Git-related
    "git.openRepositoryInParentFolders": "always",
    "git.suggestSmartCommit": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    // Python
    "interactiveWindow.executeWithShiftEnter": true,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "mypy-type-checker.showNotifications": "onWarning",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.experiments.enabled": false,
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": true,
    "python.testing.unittestEnabled": true,
    "redhat.telemetry.enabled": false,
    "security.allowedUNCHosts": [
        "wsl.localhost",
    ],
    // Terminal-related
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.hideOnStartup": "always",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.shellIntegration.decorationsEnabled": "gutter",
    "terminal.integrated.shellIntegration.suggestEnabled": true,
    // Other
    "testing.alwaysRevealTestOnStateChange": true,
    "twinny.chatModelName": "tinydolphin:latest",
    "twinny.fimModelName": "tinydolphin:latest",
    "window.closeWhenEmpty": true,
    "window.confirmBeforeClose": "keyboardOnly",
    "workbench.editor.enablePreview": false,
    
    // Vim-related settigs
    "vim.useCtrlKeys": false,
    "vim.smartRelativeLine": true,
    "vim.useSystemClipboard": true,
    "vim.foldfix":true,
    "vim.easymotion": false,
    "vim.gdefault": true,
    "vim.hlsearch": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    // Vim insert mode
    "vim.insertModeKeyBindings": [
        {
            "after": [
                "<Esc>"
            ],
            "before": [
                "j",
                "j"
            ]
        },
        {
            "after": [
                "<Esc>"
            ],
            "before": [
                "i",
                "i"
            ]
        },
        {
            "after": [
                "<Esc>"
            ],
            "before": [
                "j",
                "k"
            ]
        }
    ],
    // Vim normal mode
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "after": [],
            "before": [
                "S-Tab"
            ],
            "commands": [
                {
                    "command": "editor.action.outdentLines"
                }
            ]
        },
        {
            "after": [],
            "before": [
                "Tab"
            ],
            "commands": [
                {
                    "command": "editor.action.indentLines"
                }
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "workbench.action.showCommands"
            ],
            "silent": true
        },
        //center search result
        {
            "before": ["n"],
            "after": ["n", "z", "z", "z", "v"]
        },
        {
            "before": ["N"],
            "after": ["N", "z", "z", "z", "v"]
        },
        // yank till end of line
        {
            "before": ["Y"],
            "after": ["y", "$"]
        }, 
    ],
    // Vim visual mode
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "after": [
                ">"
            ],
            "before": [
                "<Tab>"
            ]
        },
        {
            "after": [
                "<"
            ],
            "before": [
                "<S-Tab>"
            ]
        },
    ],
    
    // Vim operation pending mode
    // quick ops inside parentheses/brackets (with c/d/y)
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["b"],
            "after": ["i", "["]
        },
        {
            "before": ["p"],
            "after": ["i", "("]
        }
    ],

    // Vim status bar colors
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.disabled": "#000000",
    "vim.statusBarColors.insert": ["#9C195B", "#ffffff"],
    "vim.statusBarColors.normal": ["#002212", "#00ff9c"],
    "vim.statusBarColors.replace": ["#a02236", "#ffffff"],
    "vim.statusBarColors.visual": ["#276300", "#ffffff"],
    "vim.statusBarColors.visualblock": ["#5a6e00", "#00ff9c"],
    "vim.statusBarColors.visualline": ["#00702b", "#ffffff"],

    // Technical - it is overwritten by Vim-mode colors on mode-change
    "workbench.colorTheme": "Cyberdyne 20XX",
    "workbench.colorCustomizations": {
        "statusBar.background": "#002212",
        "statusBar.debuggingBackground": "#002212",
        "statusBar.debuggingForeground": "#00ff9c",
        "statusBar.foreground": "#00ff9c",
        "statusBar.noFolderBackground": "#002212"
    },
}